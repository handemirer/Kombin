@using EntityLayer.Concrete
@model List<Post>

<div>
    <div class="p-3">
        <button type="button" class="  btn btn-primary" onclick="location.href='@Url.Action("AddPost", "Post")'">Kombin Ekle</button>
    </div>

    <div class="col-lg-12">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-3  mb-3">
                    <div class="card">
                        <img src="~/imageFiles/@item.imageDestination" />
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        @item.name
                        <button type="button" class=" btn btn-danger" onclick="location.href='@Url.Action("DeletePost", "Post",new  {id=@item.PostId })'">Sil</button>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
