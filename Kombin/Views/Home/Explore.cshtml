@{
    ViewData["Title"] = "Explore";
}
@using EntityLayer.Concrete
@model List<Post>

<div class="col-lg-12">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-3">
                <div class="card">
                    <img src="~/imageFiles/@item.imageDestination" />
                </div>
                <div class="card-footer">
                    @item.name
                </div>
            </div>
        }
    </div>
</div>